<%- include("./partials/header")%>

<div class="container-fluid d-flex flex-column justify-content-center align-items-center" style="height: 100vh;">
    <h2 class="p-3 text-center bg-primary-subtle text-uppercase w-100">Create Book</h2>
    <form action="/file/create" method="post" class="bg-danger px-4 py-3 rounded w-100" style="max-width: 500px;" enctype="multipart/form-data">
        <div class="form-group">
            <input type="file" name="image" class="form-control mb-3">
        </div>
        <div class="form-group">
            <input type="text" name="name" placeholder="Bookname" class="form-control mb-3">
        </div>
        <div class="form-group">
            <input type="text" name="author" placeholder="Authorname" class="form-control mb-3">
        </div>
        <div class="form-group">
            <input type="text" name="price" placeholder="Bookprice" class="form-control mb-3">
        </div>
        <div class="form-group">
            <input type="text" name="quantity" placeholder="Quantity" class="form-control mb-3">
        </div>
        <div class="form-group">
            <input type="text" name="category" placeholder="Language" class="form-control mb-3">
        </div>
        <div class="form-group">
            <textarea name="description" cols="30" rows="8" placeholder="Enter text here ----" class="form-control mb-3"></textarea>
        </div>
        <button type="submit" class="btn btn-info w-100">Add book</button>
    </form>
</div>
<a class="position-absolute top-0 end-0 p-2" href="/">Back to Homepage</a>

<%- include("./partials/footer")%>
